---
import Container from "../components/default/Container.astro";
import InputComponent from "../components/default/InputComponent.astro";
import Layout from "../layouts/Layout.astro";
import ButtonComponent from "../components/default/ButtonComponent.astro";
---

<Layout title="Components Tests">
    <div class="p-3 bg-gray-100 space-y-3">
        <div class="border border-gray-300 p-3 rounded-md bg-slate-50 shadow">
            Container
        </div>
        <button
            class="px-3 py-2 bg-orange-500 hover:bg-orange-400 rounded-md text-white disabled:opacity-50 disabled:hover:bg-orange-500"
            >Button Default
        </button>
        <button
            class="px-3 py-2 bg-orange-500 hover:bg-orange-400 rounded-md text-white disabled:opacity-50 disabled:hover:bg-orange-500"
            disabled
            >Button Default
        </button>
        <button
            class="px-3 py-2 bg-gray-100 hover:bg-gray-200 rounded-md border border-gray-300 disabled:opacity-50 disabled:hover:bg-gray-100"
        >
            Button Table
        </button>
        <button
            class="px-3 py-2 bg-gray-100 hover:bg-gray-200 rounded-md border border-gray-300 disabled:opacity-50 disabled:hover:bg-gray-100"
            disabled
        >
            Button Table
        </button>
        <!-- Switch -->
        <div
            class="bg-gray-300 border border-gray-400 has-[:checked]:bg-orange-500 flex has-[:checked]:border-orange-500 w-10 h-5 rounded-full relative transition-all duration-300"
        >
            <label
                for="switch"
                class="bg-gray-100 border-gray-400 has-[:checked]:border-orange-500 border border-inherit h-full aspect-square rounded-full absolute has-[:checked]:right-0 top-1/2 transform -translate-y-1/2 hover:cursor-pointer transition-all duration-300"
            >
                <input
                    type="checkbox"
                    name="switch"
                    id="switch"
                    class="hidden"
                />
            </label>
        </div>
        <!-- Select -->
        <select
            class="p-3 bg-gray-100 border border-gray-300 rounded-md w-full ring-1 focus:ring-orange-500"
            id="select"
        >
            <option value="1" selected>Option 1</option>
            <option value="2">Option 2</option>
            <option value="3">Option 3</option>
        </select>
        <!-- Input -->
        <input
            type="text"
            class="p-3 bg-gray-100 border border-gray-300 rounded-md w-full ring-1 focus:ring-orange-500"
        />
        <!-- Textarea -->
        <textarea
            class="p-3 bg-gray-100 border border-gray-300 rounded-md w-full ring-1 focus:ring-orange-500"
        ></textarea>
    </div>
    <div class="p-3 bg-gray-100 space-y-3">
        <Container className="" addToClass> Personal Container </Container>
        <InputComponent customType="textarea" />
        <InputComponent customType="input" />
        <ButtonComponent disabled> Boton </ButtonComponent>
        <InputComponent customType="switch" id="myswith" />
    </div>
    <button
        class="flex gap-1 bg-orange-500 hover:bg-orange-600 text-white font-bold py-2 px-4 rounded mt-2 justify-center h-10"
        type="button"
        id="check-availability"
    >
        <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            stroke="currentColor"
            fill="none"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            viewBox="0 0 24 24"
            data-icon="SvgLoader"
            aria-hidden="true"
            class="animate-spin hidden"
            id="loader"
            ><path
                d="M5.95 5.7L7 6.75 8.05 7.8m8.4 8.4l.95.95.95.95m.2-12.4L17.5 6.75 16.45 7.8M6.35 12h-3.1m17.5 0h-2.6m-5.9 9v-3.1m0-14.9v3.1"
            ></path></svg
        >
        <span id="txt-buttoncheck">Comprobar Disponibilidad</span>
    </button>
</Layout>
