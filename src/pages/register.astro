---
import Layout from "../layouts/Layout.astro";
import { PUBLIC_ROUTES } from "../utils/constant";
---

<Layout title="Register">
    <section
        class="relative flex flex-wrap h-screen items-center justify-center"
    >
        <span>
            <a
                href="/"
                class="absolute top-1 left-1 text-gray-500 flex justify-center items-center hover:underline font-bold gap-1 text-xl"
            >
                <i class="bi bi-arrow-left-square-fill text-orange-500"
                ></i>Inicio
            </a>
        </span>
        <div
            class="w-full px-4 py-12 sm:px-6 sm:py-16 lg:w-1/2 lg:px-8 lg:py-24"
        >
            <div class="mx-auto max-w-lg text-center">
                <h1 class="text-2xl font-bold sm:text-3xl">Crea una Cuenta!</h1>
            </div>
            <form
                action="#"
                method="post"
                class="mx-auto mb-0 mt-8 max-w-md space-y-4"
                id="register-form"
            >
                <div>
                    <label for="name" class="sr-only">Nombre</label>
                    <div class="relative">
                        <input
                            type="text"
                            name="name"
                            id="name"
                            class="w-full rounded-lg border-gray-200 p-4 pe-12 text-sm shadow-sm"
                            required
                            placeholder="Nombre de Usuario: John Doe"
                        />
                        <span
                            class="absolute inset-y-0 end-0 grid place-content-center px-4 text-gray-500"
                        >
                            <i class="bi bi-card-image"></i>
                        </span>
                    </div>
                </div>
                <div>
                    <label for="email" class="sr-only">Correo electrónico</label
                    >
                    <div class="relative">
                        <input
                            type="email"
                            name="email"
                            id="email"
                            class="w-full rounded-lg border-gray-200 p-4 pe-12 text-sm shadow-sm"
                            placeholder="Email: example@example.com"
                        />
                        <span
                            class="absolute inset-y-0 end-0 grid place-content-center px-4 text-gray-500"
                        >
                            <i class="bi bi-at"></i>
                        </span>
                    </div>
                </div>
                <div>
                    <label for="password" class="sr-only">Contraseña</label>
                    <div class="relative">
                        <input
                            type="password"
                            name="password"
                            id="password"
                            class="w-full rounded-lg border-gray-200 p-4 pe-12 text-sm shadow-sm"
                            required
                            placeholder="Contraseña"
                            autocomplete="new-password"
                        />
                        <span
                            class="absolute inset-y-0 end-0 grid place-content-center px-4 text-gray-500"
                        >
                            <i class="bi bi-key-fill"></i>
                        </span>
                    </div>
                </div>
                <div>
                    <label for="r-password" class="sr-only">Contraseña</label>
                    <div class="relative">
                        <input
                            type="password"
                            name="r-password"
                            id="r-password"
                            class="w-full rounded-lg border-gray-200 p-4 pe-12 text-sm shadow-sm"
                            required
                            placeholder="Repite la contraseña"
                            autocomplete="current-password"
                        />
                        <span
                            class="absolute inset-y-0 end-0 grid place-content-center px-4 text-gray-500"
                        >
                            <i class="bi bi-key-fill"></i>
                        </span>
                    </div>
                </div>
                <div class="flex items-center justify-between">
                    <p class="mt-4 text-gray-500">
                        ¿Ya tienes una cuenta? <a
                            href={PUBLIC_ROUTES.SIGN_IN}
                            class="underline">Iniciar Sesión</a
                        >
                    </p>
                    <button
                        id="btn-recaptcha"
                        class="g-recaptcha flex rounded-lg bg-orange-500 px-5 py-3 text-sm font-medium text-white"
                        data-sitekey="6Lf9VuQpAAAAAAR2Ub93R7uxzF0NNS6UsrtrDjgl"
                        data-callback="onSubmit"
                        data-action="submit">Registrarse</button
                    >
                </div>
            </form>

            <script is:inline>
                function onSubmit(token) {
                    const $password = document.getElementById("password");
                    const $repeatPassword =
                        document.getElementById("r-password");
                    if ($repeatPassword.value !== $password.value) {
                        alert("La contraseña no coincide");
                    } else {
                        fetch("/api/auth/register", {
                            method: "POST",
                            headers: {
                                "Content-Type": "application/json",
                            },
                            body: JSON.stringify({
                                name: document.getElementById("name").value,
                                email: document.getElementById("email").value,
                                password:
                                    document.getElementById("password").value,
                                token,
                            }),
                        })
                            .then((res) => res)
                            .then((data) => {
                                if (data.redirected) {
                                    alert("Usuario Creado");
                                    window.location.href = data.url;
                                } else {
                                    const text = data.text();
                                    text.then((data) => {
                                        alert(data);
                                    });
                                }
                            })
                            .catch((err) => {
                                console.error(err);
                            });
                    }
                }
            </script>
            <div class="w-full flex flex-col justify-center items-center">
                <div class="relative flex py-5 items-center w-1/3">
                    <div class="flex-grow border-t border-gray-400"></div>
                    <span class="flex-shrink mx-4 text-gray-400">O</span>
                    <div class="flex-grow border-t border-gray-400"></div>
                </div>
                <button
                    id="google"
                    class="px-4 py-2 border flex gap-2 border-slate-200 dark:border-slate-700 rounded-lg hover:border-slate-400 dark:hover:border-slate-500 hover:shadow transition duration-150"
                >
                    <img
                        class="w-6 h-6"
                        src="https://www.svgrepo.com/show/475656/google-color.svg"
                        loading="lazy"
                        alt="google logo"
                    />
                    <span>Login with Google</span>
                </button>
            </div>
        </div>
    </section>
</Layout>
