---
import About from "../components/About.astro";
import Home from "../components/Home.astro";
import Service from "../components/Service.astro";
import Contact from "../components/Contact.astro";
import Layout from "../layouts/Layout.astro";

export const prerender = true;
---

<Layout title="SnapMenu">
	<nav class="bg-slate-50 fixed w-screen z-10">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="flex items-center justify-between h-16">
				<div class="flex w-full items-center justify-between">
					<div class="flex">
						<h1
							class="text-xl font-bold pacifico-regular flex items-center gap-2"
						>
							<span
								><img
									src="/favicon.svg"
									alt=""
									srcset=""
									width="30px"
								/></span
							> SnapMenu
						</h1>
					</div>
					<div class="hidden md:block">
						<div class="ml-10 flex items-baseline space-x-4">
							<a
								href="#home"
								class="hover:bg-orange-300 hover:text-white px-3 py-2 rounded-md text-sm font-medium"
								>Home</a
							>
							<a
								href="#about"
								class="hover:bg-orange-300 hover:text-white px-3 py-2 rounded-md text-sm font-medium"
								>About</a
							>
							<a
								href="#services"
								class="hover:bg-orange-300 hover:text-white px-3 py-2 rounded-md text-sm font-medium"
								>Services</a
							>
							<a
								href="#contact"
								class="hover:bg-orange-300 hover:text-white px-3 py-2 rounded-md text-sm font-medium"
								>Contact</a
							>
							<a
								href="/login"
								class="bg-orange-500 text-white px-2 py-1 rounded-md text-sm font-medium hover:bg-white hover:text-orange-500 hover:border-orange-500 border-2"
								>Login</a
							>
							<a
								href="/register"
								class="bg-orange-500 text-white px-2 py-1 rounded-md text-sm font-medium hover:bg-white hover:text-orange-500 hover:border-orange-500 border-2"
								>Get Started</a
							>
						</div>
					</div>
				</div>
			</div>
		</div>
	</nav>
	<main class="w-full bg-slate-100">
		<Home />
		<About />
		<Service />
		<Contact />
	</main>
	<footer class="bg-slate-50 py-4">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="flex justify-between items-center">
				<p class="text-sm text-gray-500">
					Â© 2024 SnapMenu. All rights reserved.
				</p>
				<div class="flex space-x-4">
					<a href="#" class="text-gray-500 hover:text-gray-700"
						>Privacy Policy</a
					>
					<a href="#" class="text-gray-500 hover:text-gray-700"
						>Terms of Service</a
					>
				</div>
			</div>
		</div>
	</footer>
</Layout>
