---
interface Props {
    type: "button" | "submit" | "reset";
    className: string;
}

const { type, className } = Astro.props;
---

<button
    class={className ||
        "w-full rounded-lg bg-orange-500 px-3 py-2 font-medium text-white my-2 text-xl hover:bg-white hover:text-orange-500 hover:border-orange-500 border-2 border-orange-500"}
    type={type}
>
    <slot />
</button>
