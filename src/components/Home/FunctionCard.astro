---
interface Props {
    icon: string;
    title: string;
    description: string;
}

const { icon, title, description }: Props = Astro.props;
---

<div
    class="bg-white shadow-md rounded-lg p-4 gap-1 items-center grid grid-cols-5 hover:shadow-xl hover:-translate-y-1 transition duration-300 linear select-none fade-in"
>
    <div
        class="w-14 h-14 flex items-center justify-center aspect-square bg-orange-500 xl:text-3xl rounded text-white col-span-1"
    >
        <i class=`bi ${icon}`></i>
    </div>
    <div class="w-auto col-span-4">
        <h3 class="xl:text-lg font-bold">{title}</h3>
        <p class="text-gray-700">
            {description}
        </p>
    </div>
</div>
