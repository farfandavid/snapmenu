---
interface Props {
    icon: string;
    title: string;
}

const { icon, title }: Props = Astro.props;
---

<div
    class="flex flex-col justify-center items-center bg-orange-500 xl:w-20 xl:h-20 xl:text-3xl rounded h-14 w-14 hover:shadow-xl hover:-translate-y-1 transition duration-300 linear select-none"
>
    <i class=`bi ${icon}`></i>
    <h3 class="xl:text-xl font-bold">{title}</h3>
</div>
