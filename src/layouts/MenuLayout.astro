---
import RichResultMenu from "../components/seo/RichResultMenu.astro";
import SEO from "../components/seo/SEO.astro";
import type { Menu } from "../server/class/Menu";

interface Props {
    title: string;
    menu: Menu;
}

const { title, menu } = Astro.props;
---

<html lang="es">
    <head>
        <!-- Google tag (gtag.js) -->
        <script
            async
            src="https://www.googletagmanager.com/gtag/js?id=G-JET5QPLHHB"
            is:inline></script>
        <script is:inline>
            window.dataLayer = window.dataLayer || [];
            function gtag() {
                dataLayer.push(arguments);
            }
            gtag("js", new Date());

            gtag("config", "G-JET5QPLHHB");
        </script>
        <meta charset="utf-8" />
        <link
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
            type="text/css"
        />
        <meta
            name="google-site-verification"
            content="ogo30vUH2dxlKXdMdH9NpbVHiaMmIz5K90SdaUQO3aY"
        />
        <meta name="author" content="SnapMenu" />
        <SEO
            description={menu.description || ""}
            title={menu.name}
            image={menu.logoUrl}
            favicon={menu.logoUrl}
        />
        <RichResultMenu menu={menu} />
    </head>
    <body class="h-screen w-screen bg-black overflow-hidden">
        <slot />
        <div
            class="w-screen min-h-screen absolute top-0 -z-10 bg-[url('https://th.bing.com/th/id/R.c697adb39de642e86dc2a0e8a4a24982?rik=xLE6dqFrzXwocg&pid=ImgRaw&r=0')] bg-cover bg-no-repeat bg-center filter blur-lg"
        >
        </div>
        <style is:global>
            *::-webkit-scrollbar {
                height: 4px;
                width: 4px;
                background: rgba(75, 75, 75, 0);
            }

            /* Track */
            *::-webkit-scrollbar-track {
                background: #5f5f5f00;
            }

            /* Handle */
            *::-webkit-scrollbar-thumb {
                background: #888;
            }

            /* Handle on hover */
            *::-webkit-scrollbar-thumb:hover {
                background: #555;
            }

            *::-webkit-scrollbar-thumb:horizontal {
                background: #929292;
                border-radius: 10px;
            }
        </style>
    </body>
</html>
